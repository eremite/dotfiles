[user]
	email = daniel@custombit.com
	name = Daniel Esplin
[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[interactive]
	singlekey = true
[core]
	editor = vim
	excludesfile = ~/.gitignore
[credential]
	helper = cache --timeout=86400
[github]
	user = eremite
[alias]
	a = add
	an = add --all --intent-to-add .
	ap = add --patch
	b = branch
	bc = !git branch --merged master | grep -v "master" | grep -v "staging" | xargs --no-run-if-empty -n 1 git branch -d
	c = commit --verbose
	cm = commit --verbose --amend
	co = checkout
	ctags = !.git/hooks/ctags
	d = diff --ignore-submodules
	dc = diff --ignore-submodules --cached
	g = log
	h = log --graph --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit
	i = !hub issue
	l = pull
	m = merge --no-ff
	p = push
	pb = !git push --set-upstream origin `git symbolic-ref --short HEAD`
	pr = !hub pull-request -b staging
	rb = rebase --interactive --autosquash
	rs = reset
	s = status --short
	sh = show
	uncommit = reset --soft HEAD^
	z = stash
	zp = stash pop
[init]
	templatedir = ~/.git_template
[push]
	default = simple
[diff]
	algorithm = patience
