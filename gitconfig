[user]
	email = daniel@custombit.com
	name = Daniel Esplin
[color]
	ui = true
	branch = auto
	diff = auto
	interactive = auto
	status = auto
[interactive]
	singlekey = true
[core]
	editor = vim
	excludesfile = ~/.gitignore
[credential]
	helper = cache --timeout=86400
[github]
	user = eremite
[alias]
	a = add
	ap = add --patch
	b = branch
	c = commit --verbose
	cm = commit --verbose --amend
	co = checkout
	ctags = !.git/hooks/ctags
	d = diff --ignore-submodules
	dc = diff --ignore-submodules --cached
	g = log
	l = pull
	m = merge
	p = push
	pb = !git push --set-upstream origin `git symbolic-ref --short HEAD`
	rb = rebase --interactive --autosquash
	rs = reset
	s = status --short
	sh = show
	uncommit = reset --soft HEAD^
	h = log --graph --date=short --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%ad) %C(bold blue)<%an>%Creset' --abbrev-commit
[init]
	templatedir = ~/.git_template
[push]
	default = simple
