[alias]
	a = add
	ap = add --patch
	c = commit --verbose
	cm = commit --verbose --amend
	ctags = !.git/hooks/ctags
	d = diff --ignore-submodules
	dc = diff --ignore-submodules --cached
	s = status --short
	g = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	l = pull --rebase
	p = push
	rb = rebase --interactive --autosquash
	uncommit = reset --soft HEAD^
