export DOCKER_HOST=tcp://192.168.59.103:2375

alias v='vim'

alias mnt="sudo mkdir -p /Volumes/data; sudo mount_smbfs //guest@192.168.59.103/data /Volumes/data"

alias on='boot2docker up; sleep 2; docker run -it --rm --volumes-from data -v /var/run/docker.sock:/var/run/docker.sock eremite/devbox /bin/bash --login'
alias off='docker stop $(docker ps -q); boot2docker halt'
