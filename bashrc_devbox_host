# Starts a new devbox container or attaches to the running one if it exists

# Hat tip: https://gist.github.com/ekristen/11254304

function run_container {
  docker pull eremite/devbox
  docker run -it --rm --name devbox --volumes-from data -v /var/run/docker.sock:/var/run/docker.sock eremite/devbox ./init.sh
}

CONTAINER=devbox

RUNNING=$(docker inspect --format="{{ .State.Running }}" $CONTAINER 2> /dev/null)

if [ $? -eq 1 ]; then # doesn't exist
  run_container
elif [ "$RUNNING" == "false" ]; then
  docker rm -v devbox
  run_container
else
  docker attach $CONTAINER
fi
