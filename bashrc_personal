HISTSIZE=100000
HISTFILESIZE=20000

# Git tab completion
file=~/dotfiles/git-completion.bash && test -f $file && source $file
__git_complete g __git_main # Enable it for `g` alias

# Git prompt
file=~/dotfiles/git-prompt.sh && test -f $file && source $file
GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWSTASHSTATE=true
GIT_PS1_SHOWUNTRACKEDFILES=true
GIT_PS1_SHOWUPSTREAM="verbose"
PROMPT_COMMAND='__git_ps1 "\w" "\\\$ "'

# Done
file=~/done/bash_aliases.sh && test -f $file && source $file

# Heroku Toolbelt
export PATH="/usr/local/heroku/bin:$PATH"
